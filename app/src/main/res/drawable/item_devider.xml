<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#fff" />
        </shape>
    </item>

    <item
        android:left="2dp"
        android:right="-2dp"
        android:top="-2dp"
        android:bottom="-2dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="0.4dp"
                android:color="#808080"
                />
        </shape>

    </item>

</layer-list>
